{
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "no-shadow": ["off", { "builtinGlobals": false, "hoist": "functions", "allow": [] }],
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": [
                    "**/*.test.js",
                    "**/*.spec.js"
                ]
            }
        ],
       "linebreak-style": [
        "error",
        "unix"
    ],
    "no-prototype-builtins": "off",
    "consistent-return": "off",
    "no-plusplus": [
        "error",
        {
            "allowForLoopAfterthoughts": true
        }
    ]
    }
}